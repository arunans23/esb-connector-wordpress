<component name="wordpress_posts" type="synapse/template">
    <subComponents>
        <component name="createPost">
            <file>createPost.xml</file>
            <description>create new post</description>
        </component>
        <component name="editPost">
            <file>editPost.xml</file>
            <description>edit a existing post</description>
        </component>
        <component name="deletePost">
            <file>deletePost.xml</file>
            <description>delete a post</description>
        </component>
        <component name="getPostById">
            <file>getPostById.xml</file>
            <description>Return a single Post with post id</description>
        </component>
        <component name="getPostBySlug">
            <file>getPostBySlug.xml</file>
            <description>Return a single Post with post slug</description>
        </component>
        <component name="getPosts">
            <file>getPosts.xml</file>
            <description>Return matching posts</description>
        </component>
        <component name="likePost">
            <file>likePost.xml</file>
            <description>hit like for a post</description>
        </component>
        <component name="getLikesForPost">
            <file>getLikesForPost.xml</file>
            <description>get Likes for a post</description>
        </component>
        <component name="createImagePost">
            <file>createImagePost.xml</file>
            <description>create post with images</description>
        </component>
        <component name="editImagePost">
            <file>editImagePost.xml</file>
            <description>insert images to existing posts</description>
        </component>
    </subComponents>
</component>
